generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  passwordHash   String
  role           String
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  marketingWorks Work[]   @relation("MarketingWorks")
}

model Work {
  id                Int         @id @default(autoincrement())
  workCode          String      @unique
  marketingPersonId Int
  marketingPerson   User        @relation("MarketingWorks", fields: [marketingPersonId], references: [id])
  wordCount         Int
  priceInRs         Int
  categoryType      String
  clientName        String
  clientPhone       String
  otherDescription  String?
  deadline          DateTime
  status            String      @default("PENDING")
  marketingCancelReason String?
  writerQuery          String?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}
